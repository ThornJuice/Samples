<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".materialedittext.TestMaterialActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_a9c6d6">

        <com.hzy.customview.materialedittext.MaterialEditText
            android:id="@+id/materialEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入"
            app:useFloatingLabel="true" />
    </FrameLayout>

    <com.hzy.customview.view.CircleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="11111111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>